// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "containerd",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/go/src/github.com/container,type=bind,consistency=cached",
	"workspaceFolder": "/go/src/github.com/containerd",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"username": "root"
		}
	},

	// Build containerd
	"onCreateCommand": "make && sudo make install",
	"remoteUser": "root",
	"hostRequirements": {
		"cpus": 8
	}
}
